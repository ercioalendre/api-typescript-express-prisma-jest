{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist",
    "allowJs": true,
    "noEmit": false,
    "noEmitOnError": true,
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "paths": {
      "@components/*": [
        "src/components/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@repositories/*": [
        "src/repositories/*"
      ],
      "@requirements/*": [
        "src/requirements/*"
      ],
      "@database/*": [
        "src/database/*"
      ],
      "@tests/*": [
        "src/__tests__/*"
      ]
    },
    "typeRoots": [
      "@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
    "src/__tests__",
    "jest.config.js"
  ]
}